# Production Environment Configuration
# Mackintegridade - Energia - Transporte

# Application
ENVIRONMENT=production
APP_NAME=Monitor Legislativo Transporte
APP_VERSION=4.0.0
DEBUG=false

# Mackintegridade Integration
MACKINTEGRIDADE_PROJECT=energia/transporte
MACKINTEGRIDADE_BASE_URL=https://www.mackenzie.br/mackintegridade
MACKINTEGRIDADE_API_BASE=/mackintegridade/energia/transporte/api
MACKINTEGRIDADE_AUTH_ENDPOINT=/mackintegridade/auth
MACKINTEGRIDADE_ANALYTICS_ENDPOINT=/mackintegridade/analytics

# Database (RDS PostgreSQL)
DATABASE_HOST=${RDS_ENDPOINT}
DATABASE_PORT=5432
DATABASE_NAME=monitor_legislativo
DATABASE_USER=postgres
DATABASE_SSL_MODE=require

# Cache (ElastiCache Redis)
REDIS_HOST=${REDIS_ENDPOINT}
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# CORS Configuration
CORS_ORIGINS=https://www.mackenzie.br,https://mackintegridade.mackenzie.br
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# LexML Integration
LEXML_BASE_URL=https://www.lexml.gov.br/oai/sru
LEXML_TIMEOUT=60
LEXML_MAX_RETRIES=3
LEXML_RATE_LIMIT=100

# AWS Services
AWS_REGION=us-east-1
S3_BUCKET=mackintegridade-transport-data
S3_EXPORT_PREFIX=exports/
S3_CACHE_PREFIX=cache/

# Monitoring
CLOUDWATCH_LOG_GROUP=/ecs/mackintegridade-transport-monitor
CLOUDWATCH_LOG_STREAM_PREFIX=api
ENABLE_XRAY_TRACING=true

# Security
SECRET_KEY=${SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=720
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_VOCABULARY_EXPANSION=true
ENABLE_MULTI_SOURCE_SEARCH=true
ENABLE_ACADEMIC_EXPORT=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_CROSS_PROJECT_SHARING=true

# Mackintegridade SSO
SSO_ENABLED=true
SSO_PROVIDER=mackintegridade
SSO_CLIENT_ID=${SSO_CLIENT_ID}
SSO_REDIRECT_URI=https://www.mackenzie.br/mackintegridade/energia/transporte/auth/callback
SSO_SCOPE=openid profile email research_areas

# Data Repository
REPOSITORY_ENABLED=true
REPOSITORY_ENDPOINT=/mackintegridade/repository
REPOSITORY_PROJECT_ID=energia-transporte
REPOSITORY_AUTO_DEPOSIT=false

# Performance
MAX_SEARCH_RESULTS=1000
DEFAULT_PAGE_SIZE=25
CACHE_SEARCH_RESULTS=true
CACHE_VOCABULARY=true
ENABLE_QUERY_OPTIMIZATION=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_INCLUDE_CONTEXT=true
LOG_SANITIZE_SENSITIVE=true