# Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
APP_NAME="Academic Legislative Monitor"
APP_VERSION="1.0.0"
APP_ENV="production"

# Authentication Settings
# IMPORTANT: Change these for production!
ADMIN_PASSWORD="change_this_admin_password"
DEFAULT_SESSION_TIMEOUT=1800  # 30 minutes

# API Configuration
API_RATE_LIMIT_CAMARA=60      # requests per minute
API_RATE_LIMIT_SENADO=100     # requests per minute
API_TIMEOUT=30                # seconds

# Database Settings
DB_PATH="data/legislative.db"
DB_CACHE_HOURS=24
DB_MAX_RECORDS=10000

# Performance Settings
MAX_UPLOAD_SIZE_MB=30
MAX_RESULTS_PER_QUERY=1000
CACHE_DURATION_HOURS=24

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL="INFO"
LOG_FILE="data/app.log"

# Export Settings
EXPORT_MAX_RECORDS=5000
ENABLE_PDF_EXPORT=false  # Requires LaTeX

# Geographic Data
GEOBR_YEAR=2022
SIMPLIFY_TOLERANCE=0.01

# Shinyapps.io Settings (if deploying there)
# SHINYAPPS_ACCOUNT=""
# SHINYAPPS_TOKEN=""
# SHINYAPPS_SECRET=""

# Institutional Settings (optional)
# INSTITUTION_NAME=""
# INSTITUTION_URL=""
# SSO_ENDPOINT=""
# LDAP_SERVER=""