# Environment Configuration for Monitor Legislativo v4
# Copy this file to .env and fill in your values

# === DEVELOPMENT ===
NODE_ENV=development
DEBUG=true

# === PRODUCTION DEPLOYMENT ===
# Redis Configuration (Upstash Free Tier)
REDIS_URL=redis://default:your_upstash_password@your_upstash_host:6379

# Database Configuration (Supabase Free Tier)
DATABASE_URL=postgresql://postgres:your_password@db.your_project.supabase.co:5432/postgres

# API Configuration
API_BASE_URL=https://your-app.railway.app
ALLOWED_ORIGINS=https://your-username.github.io,https://your-domain.com

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_GEOGRAPHY=2592000
CACHE_TTL_SEARCH=900

# Service Settings
MAX_REQUESTS_PER_MINUTE=60
ENABLE_CACHE_WARMING=true
ENABLE_EXPORT_PRECACHE=true

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id_here

# R Shiny Configuration (if using)
SHINY_APP_URL=https://your-username.shinyapps.io/monitor-legislativo/

# Security
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=https://your-username.github.io