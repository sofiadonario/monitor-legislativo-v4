# Production Environment Configuration for Monitor Legislativo v4
# Copy this file to .env.production and configure with your production values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production
VITE_ENV=production

# Base path for deployment (GitHub Pages subdirectory if needed)
VITE_BASE_PATH=/

# API Configuration
VITE_API_BASE_URL=https://your-railway-app.railway.app
VITE_API_TIMEOUT=10000

# Force CSV data only (set to true if API is unavailable)
VITE_FORCE_CSV_ONLY=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# R Shiny Configuration
VITE_RSHINY_URL=https://your-shinyapps-name.shinyapps.io/monitor-legislativo
VITE_RSHINY_ENABLED=true

# LexML API Configuration
VITE_LEXML_API_URL=https://www.lexml.gov.br/api
VITE_LEXML_TIMEOUT=15000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache settings (milliseconds)
VITE_CACHE_TTL_DOCUMENTS=600000
VITE_CACHE_TTL_SEARCH=300000
VITE_CACHE_TTL_COLLECTIONS=120000

# Cache sizes (bytes)
VITE_CACHE_MEMORY_SIZE=52428800
VITE_CACHE_SESSION_SIZE=10485760
VITE_CACHE_LOCAL_SIZE=26214400

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Request timeouts (milliseconds)
VITE_REQUEST_TIMEOUT=10000
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000

# Pagination
VITE_DEFAULT_PAGE_SIZE=50
VITE_MAX_PAGE_SIZE=200

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Google Analytics (optional)
VITE_GA_MEASUREMENT_ID=

# Error tracking (Sentry, optional)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
VITE_ENABLE_ANALYTICS_PAGE=true
VITE_ENABLE_ADMIN_DASHBOARD=true
VITE_ENABLE_CACHE_MONITORING=true
VITE_ENABLE_EXPORT_FEATURES=true

# Debug features (should be false in production)
VITE_ENABLE_DEBUG_PANEL=false
VITE_ENABLE_PERFORMANCE_OVERLAY=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Content Security Policy
VITE_CSP_REPORT_URI=

# Trusted domains for iframe embedding
VITE_TRUSTED_DOMAINS=shinyapps.io,railway.app,github.io

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build settings
VITE_BUILD_TIMESTAMP=
VITE_BUILD_VERSION=
VITE_GIT_COMMIT_HASH=

# CDN settings (optional)
CDN_URL=

# Health check endpoints
HEALTH_CHECK_URL=https://your-railway-app.railway.app/health
PERFORMANCE_CHECK_URL=https://your-frontend-url.github.io

# Cache warming URLs (comma-separated)
CACHE_WARM_URLS=https://your-railway-app.railway.app/api/v1/search?q=transporte,https://your-railway-app.railway.app/api/v1/collections/recent

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# GitHub Pages deployment
GITHUB_TOKEN=

# Railway deployment
RAILWAY_TOKEN=

# Notifications
SLACK_WEBHOOK_URL=

# =============================================================================
# BACKEND CONFIGURATION (for deployment)
# =============================================================================

# Database
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://user:password@host:port

# API Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.github.io
CORS_ALLOW_CREDENTIALS=false

# Cache settings
ENABLE_CACHE_WARMING=true
CACHE_REDIS_TTL=3600

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================

# Application monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Alert thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
RESPONSE_TIME_ALERT_THRESHOLD=2000

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Recovery settings
RECOVERY_TIMEOUT=300