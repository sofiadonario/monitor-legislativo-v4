# Production Environment Configuration Template
# Monitor Legislativo v4 - Brazilian Legislative Research Platform
# Copy this file to .env.production and update with your actual values

# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV=production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# Application URLs
FRONTEND_URL=https://monitor-legislativo.gov.br
BACKEND_URL=https://api.monitor-legislativo.gov.br
API_BASE_URL=https://api.monitor-legislativo.gov.br/api/v1

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Primary Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/monitor_legislativo_prod
DB_HOST=your-db-host.com
DB_PORT=5432
DB_NAME=monitor_legislativo_prod
DB_USER=monitor_user
DB_PASSWORD=your-secure-password
DB_SSL=true
DB_POOL_MIN=10
DB_POOL_MAX=100

# Database Connection Pooling
DB_CONNECTION_TIMEOUT=60000
DB_IDLE_TIMEOUT=600000
DB_QUERY_TIMEOUT=30000

# ========================================
# CACHE CONFIGURATION (REDIS)
# ========================================
REDIS_URL=redis://username:password@hostname:6379
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TLS=true

# Cache Settings
CACHE_TTL=3600
CACHE_PREFIX=monitor_legislativo_v4
CACHE_MAX_MEMORY=1gb

# ========================================
# SECURITY CONFIGURATION
# ========================================
# JWT and Session Security
SECRET_KEY=your-very-secure-secret-key-minimum-32-characters-long
JWT_SECRET=your-jwt-secret-key-for-token-signing
JWT_EXPIRATION=86400
SESSION_SECRET=your-session-secret-for-cookie-signing

# API Security
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600
API_MAX_REQUESTS_PER_IP=100

# CORS Settings
CORS_ORIGIN=https://monitor-legislativo.gov.br
CORS_CREDENTIALS=true

# ========================================
# BRAZILIAN GOVERNMENT APIs
# ========================================
# Primary Legislative APIs
CAMARA_API_URL=https://dadosabertos.camara.leg.br/api/v2
SENADO_API_URL=https://legis.senado.leg.br/dadosabertos
PLANALTO_API_URL=https://www.planalto.gov.br/ccivil_03

# LexML Enhanced Research Engine
LEXML_API_URL=https://www.lexml.gov.br/oai
LEXML_API_KEY=your-lexml-api-key-if-required

# Regulatory Agencies
ANTT_API_URL=https://dados.antt.gov.br/api
ANTAQ_API_URL=https://agem.antaq.gov.br/api
ANAC_API_URL=https://sistemas.anac.gov.br/dadosabertos
ANEEL_API_URL=https://dadosabertos.aneel.gov.br/api
ANP_API_URL=https://dados.gov.br/api/publico/conjuntos-dados
ANATEL_API_URL=https://informacoes.anatel.gov.br/api
ANVISA_API_URL=https://consultas.anvisa.gov.br/api
ANS_API_URL=https://www.ans.gov.br/dadosabertos/api
ANA_API_URL=https://dadosabertos.ana.gov.br/api
ANCINE_API_URL=https://oca.ancine.gov.br/api

# Additional Government Sources
CADE_API_URL=https://dados.cade.gov.br/api
CVM_API_URL=https://dados.cvm.gov.br/api
BACEN_API_URL=https://dadosabertos.bcb.gov.br/api
TCU_API_URL=https://portal.tcu.gov.br/api

# API Rate Limiting and Timeouts
GOV_API_TIMEOUT=30000
GOV_API_RETRY_ATTEMPTS=3
GOV_API_RATE_LIMIT=100

# ========================================
# EMAIL CONFIGURATION
# ========================================
# SMTP Settings for Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@monitor-legislativo.gov.br
SMTP_PASSWORD=your-email-password
SMTP_FROM=Monitor Legislativo <noreply@monitor-legislativo.gov.br>

# Email Features
EMAIL_ENABLED=true
EMAIL_RATE_LIMIT=100
EMAIL_QUEUE_ENABLED=true

# ========================================
# FILE STORAGE
# ========================================
# Primary Storage (AWS S3 Compatible)
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=monitor-legislativo-storage
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# Alternative Storage Options
# STORAGE_TYPE=gcs
# GCS_PROJECT_ID=your-gcs-project
# GCS_BUCKET=monitor-legislativo-storage
# GCS_KEY_FILE=path/to/service-account.json

# Local Storage (Development/Testing)
# STORAGE_TYPE=local
# STORAGE_PATH=/var/lib/monitor-legislativo/storage

# ========================================
# CDN CONFIGURATION
# ========================================
CDN_ENABLED=true
CDN_URL=https://cdn.monitor-legislativo.gov.br
CDN_PROVIDER=cloudflare
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# ========================================
# MONITORING & LOGGING
# ========================================
# Application Monitoring
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Logging Configuration
LOG_FORMAT=json
LOG_DESTINATION=stdout
LOG_ROTATE=true
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# External Monitoring Services
SENTRY_DSN=your-sentry-dsn-for-error-tracking
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# ========================================
# PERFORMANCE SETTINGS
# ========================================
# Application Performance
MAX_CONCURRENT_REQUESTS=500
REQUEST_TIMEOUT=30000
UPLOAD_MAX_SIZE=50MB
RESPONSE_COMPRESSION=true

# Caching Strategy
ENABLE_CACHE_WARMING=true
CACHE_WARM_ROUTES=/api/v1/search,/api/v1/documents
STATIC_CACHE_MAX_AGE=31536000
API_CACHE_MAX_AGE=3600

# Database Performance
DB_STATEMENT_TIMEOUT=30000
DB_LOCK_TIMEOUT=10000
ENABLE_QUERY_LOGGING=false

# ========================================
# BRAZILIAN SPECIFIC SETTINGS
# ========================================
# Localization
DEFAULT_LANGUAGE=pt-BR
SUPPORTED_LANGUAGES=pt-BR,en-US
TIMEZONE=America/Sao_Paulo
CURRENCY=BRL
DATE_FORMAT=DD/MM/YYYY

# Brazilian Legal Standards
CITATION_DEFAULT_STYLE=abnt
LEGAL_DOCUMENT_ENCODING=UTF-8
PORTUGUESE_STEMMING=true
BRAZILIAN_DATE_PARSING=true

# Academic Integration
ACADEMIC_MODE=true
RESEARCH_FEATURES_ENABLED=true
BIBLIOGRAPHY_EXPORT_ENABLED=true
COLLABORATION_FEATURES_ENABLED=true

# ========================================
# COMPLIANCE & SECURITY
# ========================================
# LGPD (Brazilian Data Privacy Law)
LGPD_COMPLIANCE=true
DATA_RETENTION_DAYS=2555  # 7 years for academic research
PRIVACY_POLICY_URL=https://monitor-legislativo.gov.br/privacy
TERMS_OF_SERVICE_URL=https://monitor-legislativo.gov.br/terms

# Accessibility (WCAG 2.1 AA)
ACCESSIBILITY_ENABLED=true
SCREEN_READER_SUPPORT=true
HIGH_CONTRAST_MODE=true
KEYBOARD_NAVIGATION=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
CSP_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# ========================================
# BACKUP & RECOVERY
# ========================================
# Automated Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Backup Storage
BACKUP_STORAGE_TYPE=s3
BACKUP_S3_BUCKET=monitor-legislativo-backups
BACKUP_S3_REGION=us-east-1

# Disaster Recovery
DR_ENABLED=true
DR_RTO_HOURS=4    # Recovery Time Objective
DR_RPO_HOURS=1    # Recovery Point Objective

# ========================================
# KUBERNETES/DOCKER SETTINGS
# ========================================
# Container Configuration
CONTAINER_PORT=8000
CONTAINER_MEMORY_LIMIT=2Gi
CONTAINER_CPU_LIMIT=2000m
CONTAINER_REPLICAS=3

# Health Checks
HEALTH_CHECK_PATH=/api/v1/health
READINESS_CHECK_PATH=/api/v1/health/ready
LIVENESS_CHECK_PATH=/api/v1/health/live

# Auto-scaling
AUTOSCALING_ENABLED=true
AUTOSCALING_MIN_REPLICAS=3
AUTOSCALING_MAX_REPLICAS=10
AUTOSCALING_CPU_THRESHOLD=80
AUTOSCALING_MEMORY_THRESHOLD=80

# ========================================
# FEATURE FLAGS
# ========================================
# Academic Features
FEATURE_SEMANTIC_SEARCH=true
FEATURE_CITATION_MANAGER=true
FEATURE_RESEARCH_WORKSPACE=true
FEATURE_BIBLIOGRAPHY_EXPORT=true
FEATURE_COLLABORATION_TOOLS=true

# Advanced Features
FEATURE_REAL_TIME_UPDATES=true
FEATURE_DOCUMENT_SIMILARITY=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_API_ACCESS=true
FEATURE_BULK_EXPORT=true

# Beta Features
FEATURE_AI_SUMMARIZATION=false
FEATURE_VOICE_SEARCH=false
FEATURE_MOBILE_APP=false

# ========================================
# THIRD-PARTY INTEGRATIONS
# ========================================
# Academic Services
ORCID_CLIENT_ID=your-orcid-client-id
ORCID_CLIENT_SECRET=your-orcid-client-secret
CROSSREF_API_KEY=your-crossref-api-key
SCOPUS_API_KEY=your-scopus-api-key

# Government Services
GOV_BR_CLIENT_ID=your-gov-br-client-id
GOV_BR_CLIENT_SECRET=your-gov-br-client-secret
E_CIDADE_API_KEY=your-e-cidade-api-key

# Social Authentication (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# ========================================
# DEVELOPMENT/DEBUG SETTINGS
# ========================================
# Development Tools (Production: false)
ENABLE_SWAGGER_UI=false
ENABLE_DEBUG_ROUTES=false
ENABLE_PROFILING=false
ENABLE_SQL_LOGGING=false

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_URL=/api/docs
API_DOCS_REDOC_URL=/api/redoc

# ========================================
# LEGACY COMPATIBILITY
# ========================================
# Support for older API versions
LEGACY_API_V1_ENABLED=true
LEGACY_API_V2_ENABLED=true
LEGACY_SEARCH_FORMAT=false

# Migration Settings
MIGRATION_AUTO_RUN=false
MIGRATION_BACKUP_BEFORE=true

# ========================================
# CUSTOM EXTENSIONS
# ========================================
# Custom Brazilian Legal Extensions
ENABLE_BRAZILIAN_CITATION_STYLES=true
ENABLE_PORTUGUESE_STEMMING=true
ENABLE_LEGAL_ENTITY_RECOGNITION=true
ENABLE_JURISDICTION_DETECTION=true

# Research Extensions
ENABLE_COLLABORATIVE_ANNOTATIONS=true
ENABLE_RESEARCH_METRICS=true
ENABLE_ACADEMIC_NETWORKING=true