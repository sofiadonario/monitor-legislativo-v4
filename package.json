{
  "name": "academic-transport-legislation-monitor",
  "version": "1.0.0",
  "description": "Academic research platform for monitoring Brazilian transport legislation with real government data",
  "private": true,
  "dependencies": {
    "@types/leaflet": "^1.9.12",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "fs-extra": "^11.3.0",
    "html2canvas": "^1.4.1",
    "leaflet": "^1.9.4",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-leaflet": "^4.2.1",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@rollup/wasm-node": "^4.43.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "gh-pages": "^6.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "terser": "^5.36.0",
    "ts-jest": "^29.1.2",
    "vite": "^6.3.5"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --config vite.config.prod.ts",
    "build:analyze": "npm run build:prod && npx vite-bundle-analyzer dist",
    "build-check": "tsc && vite build",
    "preview": "vite preview",
    "preview:prod": "vite build --config vite.config.prod.ts && vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css}",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "performance:test": "node development/test-scripts/frontend_performance_test.js",
    "performance:full": "python development/test-scripts/run_performance_tests.py",
    "deploy:staging": "npm run build:prod && gh-pages -d dist -b staging",
    "deploy:prod": "development/scripts/deploy-production.sh",
    "deploy": "npm run deploy:prod",
    "predeploy": "npm run build:prod",
    "clean": "rm -rf dist node_modules/.cache",
    "clean:all": "rm -rf dist node_modules node_modules/.cache package-lock.json && npm install",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "postinstall": "node -e \"const fs = require('fs-extra'); fs.copySync('./node_modules/@rollup/wasm-node', './node_modules/rollup', { overwrite: true }); console.log('Rollup overridden with WASM build.');\"",
    "start": "npm run dev",
    "validate": "npm run type-check && npm run lint && npm run test:ci"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
